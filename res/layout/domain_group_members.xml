<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red" >

    <ImageView
        android:id="@+id/dnsLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/dns_logo_description"
        android:src="@drawable/dns_android_banner" ></ImageView>
    <FrameLayout android:layout_height="wrap_content" android:id="@+id/frameLayout1" 
        android:layout_below="@+id/dnsLogo" android:layout_alignParentLeft="true" 
        android:layout_width="fill_parent" android:background="@color/grey">

        <TextView
            android:id="@+id/domainGroupLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/group_member_activity_label"
            android:textColor="@color/white" >
</TextView>
    </FrameLayout>

    <ListView
        android:id="@+id/domainGroupMemberList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout1"
        android:visibility="gone" >

    </ListView>

    <ProgressBar
        android:id="@+id/groupMemberProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>