<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/red" android:visibility="visible">
	<ImageView android:id="@+id/dnsLogo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:src="@drawable/dns_android_banner"
		android:layout_alignParentTop="true"></ImageView>
	<TextView android:layout_height="wrap_content"
		android:textColor="@color/white"
		android:layout_width="fill_parent" android:background="@color/dark_grey"
		android:padding="4px" android:gravity="center_vertical|left"
		android:layout_below="@id/dnsLogo" android:id="@+id/digNameServerConfigHeader" android:text="@string/dig_config_servers_label"></TextView>
	<ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@+id/digNameServerConfigHeader" android:layout_alignParentLeft="true" android:id="@+id/digNameServerListView" android:layout_alignParentBottom="true"></ListView>
    
</RelativeLayout>
